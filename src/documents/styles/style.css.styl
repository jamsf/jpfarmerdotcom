@import 'nib'

a, a:link
	cursor pointer

@font-face
	font-family: '04B03'
	src: url('/fonts/04B03.ttf') format('truetype')

h1
	font-family '04B03'
	font-size 48px

body
	font-family "Lucida Sans Unicode"
	padding-top 60px
	color #EEEEEE
	background-image url('/images/bg.png');
	background-attachment fixed

.style20
	font-size 12px

.style23
	font-size 12
	align left

table
	border-collapse: separate;
	border-spacing: 4px;
	border-color: transparent;
	tfoot, tbody
		th
			border-top 1px solid #DDD
			border-color: transparent


.slide-out-div
	padding: 12px;
	width: 250p;
	background-color: rgba(20,20,20,0.7);
	border: 1px solid #29216d;

.twitter_button, .linkedin_button, .gmail_button, .gamejolt_button, .wordpress_button
	 width 46px
	 height 54px
	 margin 8px
	 display block
	 background-image url('/icons/button_sheet.png')

.linkedin_button
	background-position 0px 0px
.linkedin_button:hover
	background-position 0px -54px
.linkedin_button:active
	background-position 0px -108px

.twitter_button
	background-position -46px 0px
.twitter_button:hover
	background-position -46px -54px
.twitter_button:active
	background-position -46px -108px

.wordpress_button
	background-position -92px 0px
.wordpress_button:hover
	background-position -92px -54px
.wordpress_button:active
	background-position -92px -108px

.gmail_button
	background-position -138px 0px
.gmail_button:hover
	background-position -138px -54px
.gmail_button:active
	background-position -138px -108px

.gamejolt_button
	background-position -184px 0px
.gamejolt_button:hover
	background-position -184px -54px
.gamejolt_button:active
	background-position -184px -108px

@media screen
	div#preloader
		position: absolute;
		left: -9999px;
		top:  -9999px;
	div#preloader img
		display: block;

@media print
	div#preloader, 
	div#preloader img
		visibility: hidden;
		display: none;